  "shader": {
    "fragment_shader": "uniform vec2 u_resolution;uniform float u_time;uniform vec3 u_backgroundColor;uniform float u_px;uniform float u_py;uniform float u_r;uniform float u_poX;uniform float u_poY;uniform float u_ro;uniform float u_str;uniform float u_stro;uniform float u_m;uniform float u_mo;uniform float u_sub;uniform float u_subo;uniform int u_iterations;uniform float u_asciiSegmentSize;uniform float u_asciiTextSize;float applyCirclesMinLogic(vec2 p_val,float r_val,float str_val,float m_val,float sub_val){float base_sdf=length(p_val)-r_val;if(str_val<0.001)return base_sdf*m_val-sub_val;return(abs(base_sdf)-str_val)*m_val-sub_val;}vec3 getColor(float t){vec3 c1=vec3(0.1,0.0,0.2);vec3 c2=vec3(1.0,0.2,0.5);vec3 c3=vec3(0.2,0.8,1.0);t=smoothstep(0.0,1.0,t);vec3 ca=mix(c1,c2,t*2.0);vec3 cb=mix(c2,c3,(t-0.5)*2.0);return mix(ca,cb,step(0.5,t));}float getCharSDF(int index,vec2 uv){uv/=max(u_asciiTextSize,0.1);uv*=1.2;vec2 abs_uv=abs(uv);if(index<2)return 1.0;if(index==2)return length(uv)-0.1;if(index==3)return abs_uv.y-0.2;if(index==4)return abs(uv.x-uv.y)-0.15;if(index==5)return min(abs_uv.x,abs_uv.y)-0.2;if(index==6)return abs(abs_uv.x-abs_uv.y)-0.2;if(index==7)return max(abs_uv.x,abs_uv.y)-0.4;if(index==8){vec2 d=abs_uv-vec2(0.5,0.2);return min(max(d.x,d.y),0.0)+length(max(d,0.0))-0.1;}if(index==9){float check=mod(floor(uv.x*3.0)+floor(uv.y*3.0),2.0);return check<1.0?1.0:-1.0;}if(index==10)return min(abs(uv.x+uv.y),abs(uv.x-uv.y))-0.2;if(index==11)return abs(uv.x)+abs(uv.y)-0.6;if(index==12)return abs(length(uv)-0.5)-0.2;if(index==13){float check=mod(floor(uv.x*4.0)+floor(uv.y*4.0),2.0);return check<1.0?-1.0:1.0;}if(index==14)return min(abs(uv.x)+abs(uv.y)-0.7,max(abs_uv.x,abs_uv.y)-0.4);if(index>=15)return max(abs_uv.x,abs_uv.y)-0.6;return 1.0;}void main(){vec2 st=(gl_FragCoord.xy*2.0-u_resolution.xy)/u_resolution.y;vec2 tile_uv=st*u_asciiSegmentSize;vec2 tile_id=floor(tile_uv);vec2 intra_tile_uv=fract(tile_uv)*2.0-1.0;vec2 sample_st=(tile_id+0.5)/u_asciiSegmentSize;vec2 p=sample_st-vec2(u_px,u_py);float r=u_r;float str=u_str;float m=u_m;float sub=u_sub;float d=applyCirclesMinLogic(p,r,str,m,sub);for(int i=1;i<u_iterations;i++){p+=vec2(u_poX,u_poY);r+=u_ro;str+=u_stro*float(i);m+=u_mo*float(i);sub+=u_subo*float(i);d=min(applyCirclesMinLogic(p,r,str,m,sub),d);}float luminance=1.0-smoothstep(-0.05,0.05,d);float color_phase=sin(u_time+d*5.0)*0.5+0.5;vec3 tileColor=getColor(color_phase);int char_index=int(luminance*16.0);float char_sdf=getCharSDF(char_index,intra_tile_uv);float mask=1.0-smoothstep(0.0,0.05,char_sdf);vec3 color=mix(u_backgroundColor,tileColor,mask);gl_FragColor=vec4(color,1.0);}",
