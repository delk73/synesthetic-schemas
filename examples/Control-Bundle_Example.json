{
  "name": "Example Controls",
  "description": "Interactive controls for shape transformation and manipulation",
  "meta_info": {
    "category": "control",
    "tags": ["interactive", "transform", "mapping", "multimodal"],
    "complexity": "medium"
  },
  "control_parameters": [
    {
      "parameter": "visual.px",
      "label": "Position X",
      "type": "float",
      "unit": "linear",
      "default": 0.0,
      "min": -1.0,
      "max": 1.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "strict": true},
          "action": {"axis": "mouse.x", "sensitivity": 0.001, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "visual.py",
      "label": "Position Y",
      "type": "float",
      "unit": "linear",
      "default": 0.0,
      "min": -1.0,
      "max": 1.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": -0.001, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "visual.r",
      "label": "Radius",
      "type": "float",
      "unit": "linear",
      "default": 0.5,
      "min": 0.1,
      "max": 2.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"wheel": true, "keys": ["Shift"], "strict": true},
          "action": {"axis": "mouse.wheel", "sensitivity": 0.01, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "visual.str",
      "label": "Stroke Width",
      "type": "float",
      "unit": "linear",
      "default": 0.01,
      "min": 0.0,
      "max": 0.1,
      "step": 0.001,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["right"], "strict": true},
          "action": {"axis": "mouse.x", "sensitivity": 0.0005, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "visual.m",
      "label": "Multiplier",
      "type": "float",
      "unit": "linear",
      "default": 1.0,
      "min": -2.0,
      "max": 2.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Ctrl"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": 0.01, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "visual.sub",
      "label": "Subtract",
      "type": "float",
      "unit": "linear",
      "default": 0.0,
      "min": -1.0,
      "max": 1.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Shift"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": -0.005, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "audio.frequency",
      "label": "Oscillator Frequency",
      "type": "float",
      "unit": "Hz",
      "default": 440,
      "min": 20,
      "max": 20000,
      "step": 1,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Alt"], "strict": true},
          "action": {"axis": "mouse.x", "sensitivity": 0.5, "scale": 1.0, "curve": "exponential"}
        },
        {
          "combo": {"wheel": true, "keys": ["Shift"], "strict": true},
          "action": {"axis": "mouse.wheel", "sensitivity": 10, "scale": 1.0, "curve": "exponential"}
        }
      ]
    },
    {
      "parameter": "audio.volume",
      "label": "Output Volume",
      "type": "float",
      "unit": "dB",
      "default": -10,
      "min": -60,
      "max": 0,
      "step": 0.1,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Alt"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": -0.1, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "audio.filterFreq",
      "label": "Filter Frequency",
      "type": "float",
      "unit": "Hz",
      "default": 1000,
      "min": 20,
      "max": 20000,
      "step": 1,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["right"], "keys": ["Alt"], "strict": true},
          "action": {"axis": "mouse.x", "sensitivity": 0.5, "scale": 1.0, "curve": "exponential"}
        }
      ]
    },
    {
      "parameter": "audio.filterQ",
      "label": "Filter Resonance",
      "type": "float",
      "unit": "linear",
      "default": 1,
      "min": 0.1,
      "max": 20,
      "step": 0.1,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["right"], "keys": ["Alt"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": 0.05, "scale": 1.0, "curve": "exponential"}
        }
      ]
    },
    {
      "parameter": "haptic.intensity",
      "label": "Vibration Intensity",
      "type": "float",
      "unit": "linear",
      "default": 0.5,
      "min": 0.0,
      "max": 1.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Ctrl", "Alt"], "strict": true},
          "action": {"axis": "mouse.y", "sensitivity": -0.01, "scale": 1.0, "curve": "exponential"}
        },
        {
          "combo": {"wheel": true, "strict": true},
          "action": {"axis": "mouse.wheel", "sensitivity": 0.05, "scale": 1.0, "curve": "linear"}
        }
      ]
    },
    {
      "parameter": "haptic.frequency",
      "label": "Vibration Frequency",
      "type": "float",
      "unit": "Hz",
      "default": 100.0,
      "min": 10.0,
      "max": 500.0,
      "step": 1.0,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"mouseButtons": ["left"], "keys": ["Ctrl", "Alt"], "strict": true},
          "action": {"axis": "mouse.x", "sensitivity": 0.5, "scale": 1.0, "curve": "exponential"}
        }
      ]
    },
    {
      "parameter": "haptic.duration",
      "label": "Pulse Duration",
      "type": "float",
      "unit": "s",
      "default": 0.2,
      "min": 0.05,
      "max": 1.0,
      "step": 0.01,
      "smoothingTime": 0.1,
      "mappings": [
        {
          "combo": {"wheel": true, "keys": ["Ctrl", "Alt"], "strict": true},
          "action": {"axis": "mouse.wheel", "sensitivity": 0.01, "scale": 1.0, "curve": "linear"}
        }
      ]
    }
  ]
}